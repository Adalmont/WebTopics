<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">

    <navigation-rule>
        <from-view-id>/index.xhtml</from-view-id>
        <navigation-case>
            <from-action>volver</from-action>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{tema.elegirCat(categoriaActual)}</from-action>
            <from-outcome>true</from-outcome>
            <to-view-id>/paginas/temas/listaTemas.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/paginas/registro-login/registro.xhtml</from-view-id>
        <navigation-case>
            <from-action>volver</from-action>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{usuario.addUsuario()}</from-action>
            <from-outcome>true</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{usuario.addUsuario()}</from-action>
            <from-outcome>false</from-outcome>
            <to-view-id>/paginas/registro-login/registro.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/paginas/registro-login/login.xhtml</from-view-id>
        <navigation-case>
            <from-action>volver</from-action>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{usuario.logUsuario()}</from-action>
            <from-outcome>true</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{usuario.logUsuario()}</from-action>
            <from-outcome>false</from-outcome>
            <to-view-id>/paginas/registro-login/login.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/paginas/categorias/listaCategorias.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{tema.elegirCat(categoriaActual)}</from-action>
            <from-outcome>true</from-outcome>
            <to-view-id>/paginas/temas/listaTemas.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/paginas/temas/listaTemas.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{tema.elegirTema(temaActual)}</from-action>
            <from-outcome>true</from-outcome>
            <to-view-id>/paginas/temas/temaIndividual.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{tema.elegirTema(temaActual)}</from-action>
            <from-outcome>false</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <from-view-id>/paginas/temas/nuevoTema.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{tema.addTema(usuario)}</from-action>
            <from-outcome>true</from-outcome>
            <to-view-id>/paginas/temas/listaTemas.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{tema.addTema(usuario)}</from-action>
            <from-outcome>false</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <from-view-id>/paginas/temas/temaIndividual.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{mensaje.addMensaje(usuario)}</from-action>
            <from-outcome>true</from-outcome>
            <to-view-id>/paginas/temas/temaIndividual.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{mensaje.addMensaje(usuario)}</from-action>
            <from-outcome>false</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{mensajeActual.borrarMensaje('e')}</from-action>
            <from-outcome>true</from-outcome>
            <to-view-id>/paginas/temas/temaIndividual.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{mensajeActual.borrarMensaje('e')}</from-action>
            <from-outcome>false</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{mensajeActual.borrarMensaje('m')}</from-action>
            <from-outcome>true</from-outcome>
            <to-view-id>/paginas/temas/temaIndividual.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{mensajeActual.borrarMensaje('m')}</from-action>
            <from-outcome>false</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
        
    </navigation-rule>

</faces-config>
