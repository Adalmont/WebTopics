<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
    <!--PERFIL -->
    <navigation-rule>
        <from-view-id>/index.xhtml</from-view-id>
        <navigation-case>
            <from-action>volver</from-action>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{tema.elegirCat(categoriaActual)}</from-action>
            <from-outcome>true</from-outcome>
            <to-view-id>/paginas/temas/listaTemas.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <!--REGISTRO -->
    <navigation-rule>
        <from-view-id>/paginas/registro-login/registro.xhtml</from-view-id>
        <navigation-case>
            <from-action>volver</from-action>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{usuario.addUsuario()}</from-action>
            <from-outcome>true</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{usuario.addUsuario()}</from-action>
            <from-outcome>false</from-outcome>
            <to-view-id>/paginas/registro-login/registro.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <!--LOGIN -->
    <navigation-rule>
        <from-view-id>/paginas/registro-login/login.xhtml</from-view-id>
        <navigation-case>
            <from-action>volver</from-action>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{usuario.logUsuario()}</from-action>
            <from-outcome>true</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{usuario.logUsuario()}</from-action>
            <from-outcome>false</from-outcome>
            <to-view-id>/paginas/registro-login/login.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <!--LISTA DE CATEGORIAS -->
    <navigation-rule>
        <from-view-id>/paginas/categorias/listaCategorias.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{tema.elegirCat(categoriaActual)}</from-action>
            <from-outcome>true</from-outcome>
            <to-view-id>/paginas/temas/listaTemas.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <!--LISTA DE TEMAS -->
    <navigation-rule>
        <from-view-id>/paginas/temas/listaTemas.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{tema.elegirTema(temaActual)}</from-action>
            <from-outcome>true</from-outcome>
            <to-view-id>/paginas/temas/temaIndividual.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{tema.elegirTema(temaActual)}</from-action>
            <from-outcome>false</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{temaActual.cerrarTema()}</from-action>
            <from-outcome>true</from-outcome>
            <to-view-id>/paginas/temas/listaTemas.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{temaActual.cerrarTema()}</from-action>
            <from-outcome>false</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <!--CREAR TEMA -->
    <navigation-rule>
        <from-view-id>/paginas/temas/nuevoTema.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{tema.addTema(usuario)}</from-action>
            <from-outcome>true</from-outcome>
            <to-view-id>/paginas/temas/listaTemas.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{tema.addTema(usuario)}</from-action>
            <from-outcome>false</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <!--TEMA INDIVIDUAL -->
    <navigation-rule>
        <from-view-id>/paginas/temas/temaIndividual.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{mensaje.addMensaje(usuario)}</from-action>
            <from-outcome>true</from-outcome>
            <to-view-id>/paginas/temas/temaIndividual.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{mensaje.addMensaje(usuario)}</from-action>
            <from-outcome>false</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{mensajeActual.borrarMensaje(usuario.tipo)}</from-action>
            <from-outcome>true</from-outcome>
            <to-view-id>/paginas/temas/temaIndividual.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{mensajeActual.borrarMensaje(usuario.tipo)}</from-action>
            <from-outcome>false</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <!--BUSCADOR RECEPTOR -->
    <navigation-rule>
        <from-view-id>/paginas/privados/elegirReceptor.xhtml</from-view-id>
        <navigation-case>
            <from-action>buscar</from-action>
            <to-view-id>/paginas/privados/elegirReceptor.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{privado.elegirDestinatario(usuarioActual)}</from-action>
            <to-view-id>/paginas/privados/nuevoPrivado.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <!--NUEVO PRIVADO -->
    <navigation-rule>
        <from-view-id>/paginas/privados/nuevoPrivado.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{privado.addPrivado(usuario)}</from-action>
            <from-outcome>true</from-outcome>
            <to-view-id>/paginas/perfil/perfil.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{privado.addPrivado(usuario)}</from-action>
            <from-outcome>false</from-outcome>
            <to-view-id>/paginas/privados/nuevoPrivado.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <!--VER PRIVADOS -->
    <navigation-rule>
        <from-view-id>/paginas/privados/verPrivados.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{usuario.leerMensajes()}</from-action>
            <from-outcome>true</from-outcome>
            <to-view-id>/paginas/perfil/perfil.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{usuario.leerMensajes()}</from-action>
            <from-outcome>false</from-outcome>
            <to-view-id>/paginas/privados/verPrivados.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <!--LISTA USUARIOS -->
    <navigation-rule>
        <from-view-id>/paginas/administracion/administracionUsuarios.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{usuarioActual.bloquearUsuario(usuarioActual, 'bloquear')}</from-action>
            <from-outcome>true</from-outcome>
            <to-view-id>/paginas/administracion/administracionUsuarios.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{usuarioActual.bloquearUsuario(usuarioActual, 'bloquear')}</from-action>
            <from-outcome>false</from-outcome>
            <to-view-id>/paginas/administracion/administracionUsuarios.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{usuarioActual.bloquearUsuario(usuarioActual, 'desbloquear')}</from-action>
            <from-outcome>true</from-outcome>
            <to-view-id>/paginas/administracion/administracionUsuarios.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{usuarioActual.bloquearUsuario(usuarioActual, 'desbloquear')}</from-action>
            <from-outcome>false</from-outcome>
            <to-view-id>/paginas/administracion/administracionUsuarios.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
</faces-config>
